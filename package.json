{
  "name": "dooboostore",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prettier:check": "pnpm prettier --config .prettierrc.json --check './apps/**/*.{ts,tsx,js,jsx}' './packages/**/*.{ts,tsx,js,jsx}' ",
    "prettier:write": "pnpm prettier --config .prettierrc.json --write './apps/**/*.{ts,tsx,js,jsx}' './packages/**/*.{ts,tsx,js,jsx}' ",
    "pm2:delete:all": "pm2 delete all",
    "pm2:restart:all": "pm2 restart all",
    "pm2:start:config": "pm2 start ecosystem.config.js",
    "clear": "rm -rf node_modules && rm -rf ./package-lock.json && rm -rf pnpm-lock.yaml && pnpm store prune && pnpm -r exec -- rm -rf node_modules"
  },
  "private": true,
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "pnpm": {
    "shared-workspace-lockfile": true,
    "ignoredBuiltDependencies": [
      "@tensorflow/tfjs-node",
      "bufferutil",
      "canvas",
      "core-js",
      "esbuild",
      "puppeteer",
      "sharp",
      "utf-8-validate"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "pm2": "^6.0.6",
    "prettier": "^3.3.3"
  }
}